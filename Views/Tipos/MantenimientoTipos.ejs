<%- include('../layout', { title: 'Mantenimiento de Tipos' }) %>
<h1 class="text-center mb-4">Lista de Tipos</h1>

<form action="/tipos/search" method="get" class="search-form mb-4">
    <input type="text" name="name" placeholder="Buscar por nombre" class="form-control d-inline">
    <button type="submit" class="btn">Buscar</button>
</form>
<a href="/tipos/new" class="btn btn-success create-button mb-4">Crear Nuevo Tipo</a>

<ul class="list-group">
    <% tipos.forEach(tipo => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= tipo.nombre %></span>
            <div>
                <a href="/tipos/edit/<%= tipo.id %>" class="btn btn-primary btn-sm">Editar</a>
                <form action="/tipos/delete/<%= tipo.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro de que desea eliminar este tipo?');">Eliminar</button>
                </form>
            </div>
        </li>
    <% }) %>
</ul>